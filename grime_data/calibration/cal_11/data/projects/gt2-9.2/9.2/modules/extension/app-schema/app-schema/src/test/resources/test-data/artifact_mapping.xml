<as:AppSchemaDataAccess xmlns:as="http://www.geotools.org/app-schema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.geotools.org/app-schema AppSchemaDataAccess.xsd">
    <namespaces>
        <Namespace>
            <prefix>gml</prefix>
            <uri>http://www.opengis.net/gml</uri>
        </Namespace>
        <Namespace>
            <prefix>ex</prefix>
            <uri>urn:example:xmlns:ArtifactML:1.0</uri>
        </Namespace>
    </namespaces>
    <sourceDataStores>
        <DataStore>
            <id>datastore</id>
            <parameters>
                <Parameter>
                    <name>directory</name>
                    <value>file:./</value>
                </Parameter>
            </parameters>
        </DataStore>
    </sourceDataStores>
    <targetTypes>
        <FeatureType>
            <schemaUri>artifact.xsd</schemaUri>
        </FeatureType>
    </targetTypes>
    <typeMappings>
        <FeatureTypeMapping>
            <sourceDataStore>datastore</sourceDataStore>
            <sourceType>string_attribute</sourceType>
            <targetElement>ex:StringAttribute</targetElement>
            <attributeMappings>
                <AttributeMapping>
                    <targetAttribute>
                        ex:key
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>key</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:value
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>value</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:dateCreated
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>dateCreated</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:dateModified
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>dateModified</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:provenance
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>provenance</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        FEATURE_LINK
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>id</OCQL>
                    </sourceExpression>
                </AttributeMapping>
            </attributeMappings>
        </FeatureTypeMapping>

        <FeatureTypeMapping>
            <sourceDataStore>datastore</sourceDataStore>
            <sourceType>geo_attribute</sourceType>
            <targetElement>ex:GeoAttribute</targetElement>
            <attributeMappings>
                <AttributeMapping>
                    <targetAttribute>
                        ex:key
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>key</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:value
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>value</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:dateCreated
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>dateCreated</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:dateModified
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>dateModified</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:provenance
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>provenance</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        FEATURE_LINK
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>id</OCQL>
                    </sourceExpression>
                </AttributeMapping>
            </attributeMappings>
        </FeatureTypeMapping>

        <FeatureTypeMapping>
            <sourceDataStore>datastore</sourceDataStore>
            <sourceType>temporal_attribute</sourceType>
            <targetElement>ex:TemporalAttribute</targetElement>
            <attributeMappings>
                <AttributeMapping>
                    <targetAttribute>
                        ex:key
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>key</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:value
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>value</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:dateCreated
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>dateCreated</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:dateModified
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>dateModified</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:provenance
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>provenance</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        FEATURE_LINK
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>id</OCQL>
                    </sourceExpression>
                </AttributeMapping>
            </attributeMappings>
        </FeatureTypeMapping>

        <FeatureTypeMapping>
            <sourceDataStore>datastore</sourceDataStore>
            <sourceType>number_attribute</sourceType>
            <targetElement>ex:NumberAttribute</targetElement>
            <attributeMappings>
                <AttributeMapping>
                    <targetAttribute>
                        ex:key
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>key</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:value
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>value</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:dateCreated
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>dateCreated</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:dateModified
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>dateModified</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:provenance
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>provenance</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        FEATURE_LINK
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>id</OCQL>
                    </sourceExpression>
                </AttributeMapping>
            </attributeMappings>
        </FeatureTypeMapping>

        <FeatureTypeMapping>
            <sourceDataStore>datastore</sourceDataStore>
            <sourceType>artifact</sourceType>
            <targetElement>ex:Artifact</targetElement>
            <attributeMappings>
                <AttributeMapping>
                    <targetAttribute>
                        ex:Artifact
                    </targetAttribute>
                    <idExpression>
                        <OCQL>getId()</OCQL>
                    </idExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:id
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>id</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:seqId
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>id</OCQL>
                    </sourceExpression>
                </AttributeMapping>

                <AttributeMapping>
                    <targetAttribute>
                        ex:attributes
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>id</OCQL>
                        <linkElement>ex:StringAttribute</linkElement>
                        <linkField>FEATURE_LINK</linkField>
                    </sourceExpression>
                    <isMultiple>true</isMultiple>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:attributes
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>id</OCQL>
                        <linkElement>ex:GeoAttribute</linkElement>
                        <linkField>FEATURE_LINK</linkField>
                    </sourceExpression>
                    <isMultiple>true</isMultiple>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:attributes
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>id</OCQL>
                        <linkElement>ex:TemporalAttribute</linkElement>
                        <linkField>FEATURE_LINK</linkField>
                    </sourceExpression>
                    <isMultiple>true</isMultiple>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        ex:attributes
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>id</OCQL>
                        <linkElement>ex:NumberAttribute</linkElement>
                        <linkField>FEATURE_LINK</linkField>
                    </sourceExpression>
                    <isMultiple>true</isMultiple>
                </AttributeMapping>
            </attributeMappings>
        </FeatureTypeMapping>
    </typeMappings>
</as:AppSchemaDataAccess>
